{
    "deno.enable": false,
    "jest.autoRun": "off",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "html",
        "react"
    ],
    "conventionalCommits.scopes": [
        "app",
        "lib",
        "package",
        "tag",
        "type",
        "swagger",
        "errors",
        "plugin"
    ]
}
